/* pages/detail-song/detail-song.wxss */
.header {
  /* background-color: red; */
  position: relative;
  height: 400rpx;
  overflow: hidden;
  color: #fff;
}

.header .bg-img,
.header .bg-cover {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.header .bg-cover {
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
}

.header .top {
  display: flex;
  height: 60%;
  margin: 5% 0 5% 0;
}

.header .top .album {
  height: 100%;
  border-radius: 20rpx;
  margin: 0 6% 0 6%;
}

.header .top .infos {
  width: 50%;
}

.infos .creator {
  display: flex;
  align-items: center;
  margin: 5% 0 6% 0;
  height: 28%;
}

.infos .creator .avatar {
  height: 100%;
  border-radius: 50%;
  margin-right: 30rpx;
}

.infos .creator .nickname {
  font-size: small;
}

.infos .desc {
  font-size: smaller;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header .ctrl {
  display: flex;
  justify-content: space-around;
  font-size: 32rpx;
}

.header .ctrl .van-icon {
  font-size: 40rpx;
  margin-right: 6rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  margin: 20rpx
}

.song-list {
  padding: 20rpx;
}

.song-list {
  padding: 20rpx;
}